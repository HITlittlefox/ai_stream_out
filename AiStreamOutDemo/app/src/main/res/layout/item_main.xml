<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_optimizationLevel="none">

        <com.archeanx.libx.widget.shape.ShapeTextView
            android:id="@+id/question_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:paddingStart="12dp"
            android:paddingTop="14dp"
            android:paddingEnd="11dp"
            android:paddingBottom="14dp"
            android:textColor="@color/ai_403a53"
            android:textIsSelectable="true"
            android:textSize="13dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeBackgroundColor="@color/ai_d7ebff"
            app:shapeCorners="12dp"
            tools:text="提问内容" />


        <com.archeanx.libx.widget.shape.ShapeTextView
            android:id="@+id/reasoning_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:enabled="false"
            android:focusableInTouchMode="false"
            android:padding="14dp"
            android:textColor="@color/ai_7a7489"
            android:layout_marginTop="20dp"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@id/question_content_tv"
            app:shapeBackgroundColor="@color/ai_f3f1fc"
            app:shapeCornerBottomLeft="12dp"
            app:shapeCornerBottomRight="12dp"
            app:shapeCornerTopLeft="0dp"
            app:shapeCornerTopRight="12dp"
            tools:text="思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考思考" />


        <com.archeanx.libx.widget.shape.ShapeTextView
            android:id="@+id/reply_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shapeBackgroundColor="@color/ai_ffffff"
            app:shapeCorners="5dp"
            android:padding="5dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/ai_403a53"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:gravity="start"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reasoning_content_tv"
            tools:text="回答内容回答内容回答内容回答内容回答内容回答内容回答内容回答内容回答内容回答内容回答内容回答内容回答内容回答内容回答内容回答内容" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>